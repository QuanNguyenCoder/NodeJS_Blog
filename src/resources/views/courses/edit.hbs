<div class="mt-4">
    <h3>Cập nhật khóa học</h3>
  <form method="POST" action="/courses/{{_id}}?_method=PUT">
        <div class="form-group">
            <label for="name">Tên khóa học</label>
            <input name="name" value="{{name}}" type="text" class="form-control" id="name" placeholder="Nhập khóa học">
        </div>
        <div class="form-group">
            <label for="description">Mô tả</label>
            <textarea name="description" class="form-control" id="description" placeholder="Nhập mô tả">{{description}}</textarea>
        </div>
        <div class="form-group">
            <label for="image">Ảnh</label>
            <input name="image" value="{{image}}" type="text" class="form-control" id="image" placeholder="Nhập URL ảnh">
        </div>
        <div class="form-group">
            <label for="videoid">VideoID</label>
            <input name="videoid" value="{{videoID}}" type="text" class="form-control" id="videoid" placeholder="Nhập VideoID">
        </div>
        <button type="submit" class="btn btn-primary">Chỉnh sửa</button>
    </form>
</div>