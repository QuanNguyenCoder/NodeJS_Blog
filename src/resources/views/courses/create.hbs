<div class="mt-4">
    <h3>Đăng khóa học</h3>
  <form method="POST" action="/courses/store">
        <div class="form-group">
            <label for="name">Tên khóa học</label>
            <input name="name" type="text" class="form-control" id="name" placeholder="Nhập khóa học">
        </div>
        <div class="form-group">
            <label for="description">Mô tả</label>
            <input name="description" type="text" class="form-control" id="description" placeholder="Nhập mô tả">
        </div>
        <div class="form-group">
            <label for="image">Ảnh</label>
            <input name="image" type="text" class="form-control" id="image" placeholder="Nhập URL ảnh">
        </div>
        <div class="form-group">
            <label for="videoid">VideoID</label>
            <input name="videoid" type="text" class="form-control" id="videoid" placeholder="Nhập VideoID">
        </div>
        <button type="submit" class="btn btn-primary">Tạo</button>
    </form>
</div>